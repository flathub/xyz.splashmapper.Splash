{
    "app-id": "xyz.splashmapper.Splash",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "22.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "splash",
    "rename-desktop-file": "splash.desktop",
    "rename-icon": "splash",
    "finish-args": [
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=ipc",
        "--device=all",
        "--filesystem=host"
    ],
    "cleanup": [
        "/bin/gsl_*",
        "/bin/opencv_*",
        "/include",
        "/share/OpenCV",
        "/share/info",
        "/share/man",
        "*.a",
        "*.la",
        "*.cmake"
    ],
    "modules": [
        {
            "name": "opencv",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DBUILD_PERF_TEST=OFF",
                "-DBUILD_TESTS=OFF",
                "-DBUILD_EXAMPLES=OFF"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/opencv/opencv.git",
                    "tag": "4.6.0",
                    "commit": "b0dc474160e389b9c9045da5db49d03ae17c6a6b"
                }
            ]
        },
        {
            "name": "portaudio",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://git.assembla.com/portaudio.git",
                    "tag": "pa_stable_v190600_20161030",
                    "commit": "396fe4b6699ae929d3a685b3ef8a7e97396139a4"
                }
            ]
        },
        {
            "name": "gsl",
            "config-opts": [
                "--enable-shared",
                "--disable-static"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://mirror.ibcp.fr/pub/gnu/gsl/gsl-2.5.tar.gz",
                    "sha256": "0460ad7c2542caaddc6729762952d345374784100223995eb14d614861f2258d"
                }
            ]
        },
        {
            "name": "jsoncpp",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/open-source-parsers/jsoncpp",
                    "tag": "1.8.4",
                    "commit": "ddabf50f72cf369bf652a95c4d9fe31a1865a781"
                }
            ]
        },
        {
            "name": "shmdata",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DWITH_PYTHON=OFF"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/sat-mtl/tools/shmdata.git",
                    "tag": "1.3.72",
                    "commit": "96e044d1c6330e5fc9993cda2abc695a1dbc656e"
                }
            ]
        },
        {
            "name": "zmq",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DWITH_LIBSODIUM=OFF",
                "-DWITH_TLS=OFF",
                "-DENABLE_WS=OFF"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/zeromq/libzmq.git",
                    "tag": "v4.3.4",
                    "commit": "4097855ddaaa65ed7b5e8cb86d143842a594eebd"
                }
            ]
        },
        {
            "name": "splash",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_GENERIC_ARCH=ON",
                "-DWITH_LTO=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.com/splashmapper/splash/-/jobs/artifacts/0.10.4/raw/splash.tar.gz?job=package%3Afullsources",
                    "dest-filename": "splash.tar.gz",
                    "archive-type": "tar-gzip",
                    "sha256": "adcc19ff7405df8370616067767a03633b1bea1215b92c6a8c26bbdfe976edca"
                }
            ]
        }
    ]
}
